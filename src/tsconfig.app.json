{
  "extends": "../tsconfig.json",
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "types": [],
    "baseUrl": "./",
    "paths": {
      "@core/*": [
        "app/core/*"
      ],
      "@shared/*" : [
        "app/shared/*"
      ],
      "@lazy/*": [
        "app/lazy/*"
      ],
      "@material/*" : [
        "app/material/*"
      ],
      "@environment": [
        "environments/environment"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableIvy": true
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
